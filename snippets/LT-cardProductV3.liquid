{% comment %} in progress {% endcomment %}


<main class="shadow-xl mb-12 h-[35rem] w-[25rem] relative grid grid-cols-1 grid-rows-2">
  <div class="absolute h-[18rem] w-[25rem] top-0 
    {% assign colorIndex = index_id | modulo: 1 %}
    {% if card_product.featured_media.src contains ".png" %}
    {% case colorIndex %}
      {% when 1 %} bg-gray-50
      {% when 2 %} bg-gray-600
      {% when 3 %} bg-stone-600
      {% when 4 %} bg-indigo-600
      {% when 5 %} bg-blue-600
      {% when 6 %} bg-purple-600
      {% when 7 %} bg-teal-600
      {% when 8 %} bg-rose-600
      {% when 9 %} bg-slate-600
      {% else %} bg-gray-200
    {% endcase %}
  {% endif %}">
  </div>
  <div class="flex relative justify-center items-start">
    {% if card_product.featured_media.src contains ".png" %}
    <img src="{{ card_product.featured_media | image_url: width: 350 }}" alt="" loading="lazy" class="w-auto object-cover h-[25rem] absolute m-auto max-w-[23rem] top-2">
      {% elsif card_product.featured_media.aspect_ratio >= 1 %}
    <img src="{{ card_product.featured_media | image_url: width: 350 }}" alt="" loading="lazy" class=" m-auto max-w-[22rem]">
    {% else %}
    <img src="{{ card_product.featured_media | image_url: width: 350 }}" alt="" loading="lazy" class=" m-auto max-w-[22rem] max-h-[24rem]">
    {% endif %}
  </div>
  
  <div class="bg-slate-700 text-slate-50 flex items-end">
    <div class="flex flex-col">
      <div>{{index_id | modulo: 10 }}</div>
      <div class="text-xl px-2">{{card_product.title}}</div>
    </div>
  </div>
</main>