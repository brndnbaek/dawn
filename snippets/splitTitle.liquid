<div class="text-slate-700 leading-[1.3] basis-4/5">
  <a href="{{ card_product.url }}" class="no-underline full-unstyled-link">
    {% case card_product.type %}
      {% when 'Writing Material' %}
        {% assign splitTitle = card_product.title | split: ' - ' %}
        {{ splitTitle[0] }}
        <br>
        {{ splitTitle[1] }}
        <br>
        {{ splitTitle[2] | truncate: 35 }}
        {{ splitTitle[3] | truncate: 35 }}
      {% when 'Plush' %}
        {% assign splitTitle = card_product.title | split: ' - ' %}
        {% for linetitle in splitTitle %}
          {{ linetitle }}
          <br>
        {% endfor %}
      {% when 'K-Cosmetic' %}
        {{ card_product.title | escape | replace_first: '] ', ']<br />' | newline_to_br }}
      {% when 'Kpop CD' %}
        {%- comment -%}
          {% assign splitTitle = card_product.title | split: " - " %}
          {{ splitTitle[0] | remove: 'K-Pop ' | remove: 'CD ' | replace_first: " '", "<br />'" | newline_to_br }}
          <br/>
          {{ splitTitle[1] | replace_first: " '", "<br />'" }}
          <br/>
          {{ splitTitle[2] | truncate: 35 }}
        {%- endcomment -%}
        {% assign splitTitle = card_product.title | split: ' - ' %}
        {% assign kpopArtist = splitTitle[0] | split: " '" %}
        {% assign kpopAlbum = splitTitle[1] | split: " '" %}
        <div class="text-2xl font-bold text-slate-700">{{ kpopArtist[0] | remove: 'K-Pop ' | remove: 'CD ' }}</div>
        <div class="font-semibold text-slate-600">{{ kpopArtist[1] }}</div>
        <div class="font-light text-slate-700 italic text-base">{{ kpopAlbum[0] }}</div>
        <div class="text-slate-700 font-medium">{{ kpopAlbum[1] | remove_last: "'" | truncate: 35 }}</div>
      {% when 'Gundam Model Kit' %}
        {% assign splitTitle = card_product.title | split: ' #' %}
        <span class="block font-semibold {% if splitTitle[1] %}text-lg text-slate-700{%else%}text-xl text-slate-700{% endif %}">
          {{- splitTitle[0] }}
        </span>
        {% if splitTitle[1] %}
          <span class="block font-semibold text-xl text-slate-700">{{ splitTitle[1] | prepend: '#' }} </span>
        {% endif %}
        <span class="block">{{ splitTitle[2] | truncate: 35 }} </span>
        {{ splitTitle[3] | truncate: 35 }}
      {% when 'Other Model Kit' %}
        {% assign splitTitle = card_product.title | remove: 'Model Kit' | split: ' - ' %}
        <span class="block font-semibold text-slate-700 text-xl">
          {{- splitTitle[0] }}
        </span>
        {% if splitTitle[1] %}
          <span class="block font-semibold text-xl text-slate-700 
            {% if splitTitle[2] %}text-lg italic py-1{% endif %}">{{ splitTitle[1] }}</span>
          <span class="block font-semibold text-xl text-slate-700">{{ splitTitle[2] | truncate: 50 }}</span>
          {{ splitTitle[3] | truncate: 35 }}
        {% endif %}
      {% when 'Figure' %}
        {% assign splitTitle = card_product.title | split: ' - ' %}
        <span class="font-semibold">{{ splitTitle[0] }} </span>
        <span class="block font-light text-slate-600">{{ splitTitle[1] }} </span>
        <span class="block font-medium text-slate-900">{{ splitTitle[2] | truncate: 35 }} </span>
        {{ splitTitle[3] | truncate: 30 }}
      {% else %}
        {% assign splitTitle = card_product.title | split: ' - ' %}
        <span class="font-semibold">{{ splitTitle[0] }}</span>
        <br>
        <span class="block font-light text-slate-600">{{ splitTitle[1] }} </span>
        <span class="block font-medium text-slate-900">{{ splitTitle[2] | truncate: 35 }} </span>
        {{ splitTitle[3] | truncate: 35 }}
    {% endcase %}
  </a>
</div>
