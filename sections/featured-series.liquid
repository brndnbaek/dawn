

{%- style -%}
.section-{{ section.id }}-padding {
padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
.section-{{ section.id }}-padding {
padding-top: {{ section.settings.padding_top }}px;
padding-bottom: {{ section.settings.padding_bottom }}px;
}
}
{%- endstyle -%}

{% assign series_array = section.settings.series_list | newline_to_br | split: '<br />' | sort %}


<!-- <div class="text-center">
  <h3>All Characters</h3>
</div> -->
<div class="flex flex-wrap justify-center w-3/4 mx-auto mb-10 font-bold">
  
  {% assign print_letter ="" %}
  {% assign array_tag = section.settings.series_list | split: ',' | uniq | sort %}
  {% for t in array_tag %}
    {% assign simpletag = t | downcase  %}
    {% if collections.all.all_tags contains simpletag %}
      {% assign alphabet_on = t | upcase | truncate:1, '' %}

        {%unless alphabet_on == print_letter %}

        <a class="px-3 mx-1 mb-2 rounded-md hover:text-yellow-200 hover:bg-gray-500 hover:border" href="#{{alphabet_on}}">
          <div class="text-2xl md:text-3xl ">{{alphabet_on}}</div>
        </a>
        {% endunless %}
      {% assign print_letter = alphabet_on %}
      {%endif%}
  {% endfor %}
</div>

<div class="grid w-5/6 grid-cols-2 gap-2 mx-auto md:grid-cols-4 lg:grid-cols-5">
  {% assign current_letter = "" %}
  {% assign array_tag = section.settings.series_list | split: ',' | uniq |sort_natural %}
  {% for t in array_tag %}
  {% assign simpletag = t | downcase %}

  {% if collections.all.all_tags contains simpletag %}
  {% assign first_letter = t | upcase | truncate:1, '' %}

  {% unless first_letter == current_letter %}
  <div id="{{first_letter}}" class="py-2 pl-2 my-2 text-2xl font-bold text-gray-700 md:text-3xl bg-lt-yellow col-span-full">
    {{ first_letter }}</div>
  {% endunless %}
  <div class="text-gray-900 capitalize">
    <a class="p-1 text-gray-900 rounded hover:text-gray-900 hover:bg-green-300"
      href="{{collections.all.url}}/{{ t | join: "+" | replace: " ","-" }}">
      {{t}}
    </a>
  </div>
  {% assign current_letter = first_letter %}
  {% endif %}

  {% endfor %}

</div>

{% schema %}
{
"name": "Featured Series",
"tag": "section",
"class": "section",
"settings": [
{
"type": "text",
"id": "title",
"default": "Featured Series",
"label": "Heading Title"
},
{
"type": "textarea",
"id": "series_list",
"label": "type in series separated by comma"
}
],

"blocks": [
{
"name":"Series",
"type": "series",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Series Image"
},
{
"type": "text",
"id": "seriestitle",
"label": "Series Title"
}
]
}
],
"presets": [
{
"name": "featured series"
}
]
}
{% endschema %}