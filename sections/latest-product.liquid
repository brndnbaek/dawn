


<div class="py-4 pl-8 md:py-8 md:pl-12 lg:pl-20 bg-lt-white tw_smallheading">
  <em class="tw_smallEM">Take</em> a look at the latest arrival.
</div>
<div class="flex w-screen pt-10 bg-lt-white">
  <div class="flex flex-col items-center justify-center flex-shrink-0 px-2">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.707-10.293a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L9.414 11H13a1 1 0 100-2H9.414l1.293-1.293z" clip-rule="evenodd" />
      </svg>
  </div>

  <div class="tw_scroll flex w-screen gap-10 pb-10 mx-auto px-6 overflow-x-scroll snap-mandatory before:shrink-0 before:w-[15vw] after:shrink-0 after:w-[2vw]">
    {% for block in section.blocks %}
      {%- assign product = section.blocks.settings.product -%}
      <div class="w-[300px] h-[450px] snap-center rounded-xl drop-shadow-xl shadow-amber-300/50 bg-white flex flex-col justify-end relative">
        <div class="absolute top-2 left-2">
          <div class="text-gray-800">{{block.settings.label}}</div>
          <div>{{block.settings.description}}</div>
          <div>{{block.settings.promo}}</div>
        </div>
        <div class="flex flex-col group shrink-0 w-[300px] h-[370px] bg-cover bg-bottom bg-no-repeat bg-scroll rounded-b-xl"
        style="background-image:url({{block.settings.product.featured_image | img_url:'400x'}})" >
          <div class="w-full px-4 rounded-b-xl">
          </div>
          <!-- <img src="{{block.settings.product.featured_image | img_url: '300x300'}}" alt="" class="object-contain w-full h-auto"> -->
        </div>
      </div>
    {%endfor%}
  </div>

  <div class="flex flex-col items-center justify-center flex-shrink-0 px-2">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 1.414L10.586 9H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd" />
      </svg>
</div>

</div>





{% schema %}
{
  "name": "Latest Product",
  "tag": "section",
  "blocks": [
    {
      "type": "product",
      "name": "latest product",
      "settings": [
      {
        "type": "product",
        "id": "product",
        "label": "choose a product"
      },
      {
        "type": "color",
        "id": "color_bg",
        "default": "#fff",
        "label": "choose a product card backgroud color"
      },
      {
        "type": "text",
        "id": "label",
        "default": "New",
        "label": "Iphone 13 Pro, Valentine's Day Gifts, Limited Quantity"
      },
      {
        "type": "text",
        "id": "promo",
        "default": "short promotion",
        "label": "oh so pro, oh so adorable"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "type in promotional description"
      }
      ]
    }
  ],
  
  "presets": [
    {
      "name": "Latest Products Slide"
    }
  ]
}
{% endschema %}
