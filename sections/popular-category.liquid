<div class="grid w-full grid-cols-6 p-6 mx-auto subpixel-antialiased text-gray-500 bg-lime-200 bg-opacity-60">
    <div class="w-full col-span-5 p-4 text-4xl font-bold leading-loose md:text-5xl lg:text-7xl md:w-4/5 ">
    <span class="text-gray-900">Lil'Thingamajigs</span>
    <span class="relative leading-8 text-gray-500 "> - The best place to find the products you love.</span>
    </div>
    <div class="col-span-1 text-lg lg:text-2xl">Need Shopping Help?</div>
</div>
<div class="flex snap-mandatory w-screen gap-6 px-6 overflow-x-scroll snap-x before:shrink-0 before:w-[2vw] after:shrink-0 after:w-[2vw] bg-lime-200 bg-opacity-60">
    {% for block in section.blocks  %}
    <a href="{{block.settings.collection.url}}">
        <div class="flex flex-col snap-center shrink-0 w-[35vw] md:w-[15vw]">
            <img src="{{block.settings.collection.image | img_url: '400x400' }}" 
            alt="" class="z-0 object-contain w-full h-full rounded-full hover:scale-105">
            <span class="mx-auto my-10 text-center text-gray-600">{{block.settings.collection.title}}</span>
        </div>
    </a>
    {%endfor%}
</div>

{% schema %}
{
"name": "Popular Category",
"class": "section",
"tag": "section",
"settings": [
{
"type": "text",
"id": "title",
"default": "Lil'Thingamajigs - The best place to find the products you love.",
"label": "type in banner heading"
}
],
"blocks": [
{
"type": "category",
"name": "category selection",
"settings": [
{
"type": "collection",
"id": "collection",
"label": "selected collection"
},
{
"type": "image_picker",
"id": "image",
"label": "category image"
},
{
"type": "text",
"id": "title",
"label": "category text label"
},
{
"type": "url",
"id": "link",
"label": "category url link"
}
]
}
],
"presets": [
{
"name": "popular category",
"blocks": [
{
"type": "category"
},
{
"type": "category"
},
{
"type": "category"
}
]
}
]
}
{% endschema %}